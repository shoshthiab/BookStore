@model BookStore.Models.AdsSlider

@{
    ViewData["Title"] = "Delete";
}

<h3 style="font-weight:bold">Are you sure you want to delete this Ad?</h3>
<br />
<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdType)
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd> *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            Ad Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AdImagePath))
            {
                <img src="@Model.AdImagePath" alt="Author Image" style="max-width: 200px;" />
            }

        </dd>
    </dl>

    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AdId" />
        <input type="submit" value="Delete" class="btn Anotherbtn" /> 
        <br />
        <a asp-action="Index" style="text-decoration:underline;color:#2a2438">Back to Ads List</a>
    </form>
</div>
