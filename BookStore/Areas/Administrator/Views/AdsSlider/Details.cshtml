@model BookStore.Models.AdsSlider

@{
    ViewData["Title"] = "Details";
}

<h2>Ad Details</h2>
<hr  />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdTitle)
        </dd>
       
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AdType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AdType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AdDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AdDescription)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            Ad Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.AdImagePath))
            {
                <img src="@Model.AdImagePath" alt="Ad Image" style="max-width: 200px;" />
            }
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.AdId" class="btn Anotherbtn">Edit</a> <br />
    <a asp-action="Index" style="text-decoration:underline;color:#2a2438">Back to Ads List</a>
</div>
