@model BookStore.Models.Author

@{
    ViewData["Title"] = "New Author";
}

<h2>Create New Author</h2>
<hr style="margin:0;padding:0;" />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorName" class="control-label"></label>
                <input asp-for="AuthorName" class="form-control" />
                <span asp-validation-for="AuthorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FbLink" class="control-label"></label>
                <input asp-for="FbLink" class="form-control" />
                <span asp-validation-for="FbLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InstaLink" class="control-label"></label>
                <input asp-for="InstaLink" class="form-control" />
                <span asp-validation-for="InstaLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkedInLink" class="control-label"></label>
                <input asp-for="LinkedInLink" class="form-control" />
                <span asp-validation-for="LinkedInLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="XLink" class="control-label"></label>
                <input asp-for="XLink" class="form-control" />
                <span asp-validation-for="XLink" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CreationDate" class="control-label"></label>
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="imageFile">Upload Author Image</label>
                <input type="file" name="imageFile" class="form-control" />
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn" style="margin-top:10px;text-decoration:none;background-color:#5c5470;color:white" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" style="text-decoration:underline;color:#2a2438">Back to Authors List</a>
</div>



