@model BookStore.Models.Essay

@{
    ViewData["Title"] = "Essay Details";
}

<h2>Essay Details</h2>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EssayTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EssayTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author.AuthorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.AuthorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EssayDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EssayDescription)
        </dd>
        @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EssayAuthor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EssayAuthor)
        </dd> *@
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EssayImagePath)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EssayImagePath)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            Essay Image
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.EssayImagePath))
            {
                <img src="@Model.EssayImagePath" alt="Essay Image" style="max-width: 200px;" />
            }
        </dd>
    </dl>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.EssayId" class="btn Anotherbtn">Edit</a> <br />
    <a asp-action="Index" style="text-decoration:underline;color:#2a2438">Back to Essays List</a>

</div>

