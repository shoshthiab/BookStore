@model BookStore.Models.ViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "CreateRole";
}



<head>
    <link rel="stylesheet" href="~/css/AdminStyle.css" />
 

</head>


<body>
    
<div class="container">
    <!-- Left Sidebar -->
     @Html.Partial("LeftSidebar")


    <!-- Main Content -->
    <div class="main-content">
        <h4>Create New Role</h4>
        <br />
        <!-- Create Role Button -->

            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CreateRole">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label" style="display: inline-block; white-space: nowrap; ">
                                Role Name</label>

                            <input asp-for="Name" class="form-control custom-input" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>



                        <br />
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-create-role" />
                        </div>
                    </form>
                </div>
            </div>
            @for(var i = 0; i < 3; i++)
            {
                <br />
            }
           
            <div>
                <a asp-action="RolesList" asp-controller="Account" class="btn btn-create-role">
                 
                    <img src="~/img/leftArrow.png" alt="Left Arrow" class="back"/>
                     Roles List</a>
            </div>

    </div>
</div>

</body>
