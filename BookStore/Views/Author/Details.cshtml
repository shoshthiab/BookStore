@model BookStore.Models.Author

@{
    ViewData["Title"] = "Author Details";
}

<div class="card p-4 shadow-lg" style="background-color: #e7eaf6; border-radius: 10px;">
    <div class="row align-items-center">
       
        <div class="col-md-4 text-center" style="margin-top:15px;">
            <img src="@Model.AuthorImagePath" alt="Author Image" class="img-fluid"
                 style="max-height: 300px; border-radius: 10px; border: 1px solid #113f67; margin-top: 10px;" />
        </div>

      
        <div class="col-md-8" style="margin-top:30px;">
            <h4 style="color: #113f67; border-bottom: 2px solid #113f67; padding-bottom: 5px;">Author Details</h4>
            <dl class="row mt-3" style="color: #113f67;">
                <dt class="col-sm-4" >Author Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AuthorName)</dd>
                <dt class="col-sm-4">Social Media</dt>
                <dd class="col-sm-8">
                <div class="social-links">
                    <a href="@Model.FbLink"><img style="width:20px;height:20px;" src="~/img/facebook_blue.png" alt="Facebook"></a>
                    <a href="@Model.InstaLink"><img style="width:20px;height:20px;" src="~/img/instagram_blue.png" alt="Instagram"></a>
                    <a href="@Model.XLink"><img style="width:20px;height:20px;" src="~/img/twitterfilled.png" alt="Twitter"></a>
                    <a href="@Model.LinkedInLink"><img style="width:23px;height:23px;" src="~/img/linkedin_blue.png" alt="LinkedIn"></a>
                </div>
                </dd>
                <div >
                    @if (Model.Books != null && Model.Books.Any())
                    {
                        <dt class="col-sm-4">Author Books</dt>
                        <dd class="col-sm-8">
                        @foreach (var book in Model.Books)
                        {
                            <span class="book-item" style="text-decoration:underline">
                                <a asp-action="Details" asp-controller="Book" asp-route-id="@book.BookId">@book.BookTitle</a>
                            </span>

                            @if (book != Model.Books.Last())
                            {
                                <span class="separator">, </span>
                            }
                        }
                        </dd>
                    }

                </div>



   @* 
                <dt class="col-sm-4 ">Books</dt>
               <dd class="col-sm-8" style="text-decoration:underline">
                  
                </dd> *@
            </dl>
        </div>
    </div>
</div>

<div class="button-container">
    <a asp-action="Index" asp-controller="Book">
        <button class="styled-button">View All Books</button>
    </a>
</div>

<style>
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #e7eaf6;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .styled-button {
        background-color: #113f67;
        color: #e7eaf6;
        font-size: 18px;
        font-weight: bold;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    }

        .styled-button:hover {
            background-color: #38598b;
            transform: translateY(-2px);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        }

        .styled-button:active {
            transform: translateY(0);
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }
</style>
