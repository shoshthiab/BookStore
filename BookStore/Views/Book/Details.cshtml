@model BookStore.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="card p-4 shadow-lg" style="background-color: #e7eaf6; border-radius: 10px;">
    <div class="row align-items-center">
       
        <div class="col-md-4 text-center" style="margin-top:15px;">
            <img src="@Model.BookImagePath" alt="Book Image" class="img-fluid"
                 style="max-height: 300px; border-radius: 10px; border: 1px solid #113f67; margin-top: 10px;" />
        </div>

      
        <div class="col-md-8" style="margin-top:30px;">
            <h4 style="color: #113f67; border-bottom: 2px solid #113f67; padding-bottom: 5px;">Book Details</h4>
            <dl class="row mt-3" style="color: #113f67;">
                <dt class="col-sm-4" >Title</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.BookTitle)</dd>

                <dt class="col-sm-4">Language</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Language)</dd>

                <dt class="col-sm-4 ">Topic</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Topic)</dd>

                <dt class="col-sm-4 ">Available</dt>
                <dd class="col-sm-8"style="color:red; font-weight:bold">@Html.DisplayFor(model => model.Available)</dd>
          
                <dt class="col-sm-4 ">Available Quantity</dt>
                <dd class="col-sm-8" style="color:red; font-weight:bold">@Html.DisplayFor(model => model.AvailableQuantity)</dd>

                
               

                <dt class="col-sm-4 ">Price</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Price) @Html.DisplayFor(model => model.Currency)</dd>

                <dt class="col-sm-4 ">Author</dt>
                @* <dd class="col-sm-8">@Html.DisplayFor(model => model.Author.AuthorName)</dd> *@
                <dd class="col-sm-8" style="text-decoration:underline">
                      <a asp-action="Details" asp-controller="Author" asp-route-id="@Model.Author.AuthorId" style="color:black">
                    @Html.DisplayFor(model => model.Author.AuthorName)</a></dd>
            </dl>
        </div>
    </div>
</div>

<div class="button-container">
    <a asp-action="Index" asp-controller="Book">
        <button class="styled-button">View All Books</button>
    </a>
</div>

<style>
    .button-container {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #e7eaf6;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .styled-button {
        background-color: #113f67;
        color: #e7eaf6;
        font-size: 18px;
        font-weight: bold;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
    }

        .styled-button:hover {
            background-color: #38598b;
            transform: translateY(-2px);
            box-shadow: 0px 6px 10px rgba(0, 0, 0, 0.3);
        }

        .styled-button:active {
            transform: translateY(0);
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
        }
</style>
